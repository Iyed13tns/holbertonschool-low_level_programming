#include <stdio.h>
#include <stdlib.h>i
#include <time.h>

int main(void)
{
        int n;
        
        srand(time(0));
        n = rand() - RAND_MAX / 2;
        
        printf("%d \n", n);
        
        if (n > 0)
        {
             printf("is positive %d \n");
        }
        else if (n < 0)
        {
             printf("0 is negative %d \n");
        }
        else
        {
             printf("0 is zero %d \n");
        }
        
        return 0;
}
